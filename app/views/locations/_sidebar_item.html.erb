<div class="sidebar_item <%= 'active' if location == current_location %>"
    id="<%= dom_id(location) %>" onclick="window.location.href='<%= location_path(location.city) %>'">
        <h3><%= location.city %></h3>

    <%= button_to "Delete", 
        delete_location_path(location.city), 
        method: :delete,
        class: "delete-btn",
        onclick: "event.stopPropagation();" 
        %>

</div>